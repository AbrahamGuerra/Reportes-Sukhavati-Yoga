:80 {
    # FRONT
    handle /Reportes-Sukhavati-Yoga/* {
        root * /srv/public
        file_server
    }

    # Redirige ra√≠z a la subcarpeta del front
    @root path /
    redir @root /Reportes-Sukhavati-Yoga/

    # API (NO handle_path para no recortar /api)
    handle /api/* {
        reverse_proxy http://api:3000
    }

    encode gzip
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }
}

madigitalmx.com, www.madigitalmx.com {
    handle /Reportes-Sukhavati-Yoga/* {
        root * /srv/public
        file_server
    }

    @root path /
    redir @root /Reportes-Sukhavati-Yoga/

    handle /api/* {
        reverse_proxy http://api:3000
    }

    encode gzip
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }
}
