madigitalmx.com, www.madigitalmx.com {

    # Est√°ticos bajo /Reportes-Sukhavati-Yoga (sin recortar el prefijo)
    handle /Reportes-Sukhavati-Yoga/* {
        root * /srv/public
        file_server
    }

    # Redirige / a la subcarpeta
    @root path /
    redir @root /Reportes-Sukhavati-Yoga/

    # Proxy API
    handle_path /api/* {
        reverse_proxy api:3000
    }

    encode gzip
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }
}
